{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=sqlserver-fcg,1433;Initial Catalog=fcg_catalog;Persist Security Info=False;User ID=sa;Password=YourPassword123**;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=True;Connection Timeout=30;",
    "Redis": "fcg-redis:6379,password=CatalogApi"
  },
  "CacheSettings": {
    "AbsoluteExpirationInHours": 1,
    "SlidingExpirationInMinutes": 30
  },
  "KafkaSettings": {
    "BootstrapServers": "kafka-fcg:29092",
    "ClientId": "fcg-catalog",
    "Consumer": {
      "GroupId": "fcg-catalog-consumer-group",
      "EnableAutoCommit": false,
      "SessionTimeoutMs": 10000,
      "AutoOffsetReset": "earliest",
      "MaxPollIntervalMs": 300000
    },
    "Topics": {
      "ConsumerTopics": [
        {
          "TopicName": "user-created",
          "HandlerType": "UserCreatedConsumerHandler",
          "MaxTries": 3,
          "Enabled": true
        },
        {
          "TopicName": "payment-processed",
          "HandlerType": "PaymentProcessedConsumer",
          "MaxTries": 3,
          "Enabled": true
        }
      ],
      "ProducerTopics": {
        "UserCreated": "user-created",
        "order-placed": "order-placed"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq-fcg:5341"
        }
      }
    ]
  },
  "JwtSettings": {
    "SecretKey": "z3F+7sR8vN5YlG1aXb2j8KqH0yL9uD3vM4pQ5rT6sU8=",
    "Issuer": "FCG-User",
    "Audience": "FCG-Client"
  },
  "AllowedHosts": "*"
}