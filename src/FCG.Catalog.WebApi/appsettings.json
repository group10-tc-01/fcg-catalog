{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=127.0.0.1;Database=fcg_catalog;User Id=sa;Password=YourPassword123;TrustServerCertificate=True;"
  },
  "KafkaSettings": {
    "BootstrapServers": "localhost:9092",
    "ClientId": "fcg-catalog",

    "Consumer": {
      "GroupId": "fcg-group",
      "EnableAutoCommit": false,
      "SessionTimeoutMs": 10000,
      "AutoOffsetReset": "earliest",
      "MaxPollIntervalMs": 300000
    },

    "Topics": {
      "ConsumerTopics": [
        {
          "TopicName": "user-created",
          "HandlerType": "UserCreatedConsumerHandler",
          "MaxTries": 3,
          "Enabled": true
        }
      ]
    }
  },
  "AllowedHosts": "*"
}
